rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    match /products/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /designThemes/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow create: if true;

      allow read: if isAdmin() || (resource.data.userId != null && request.auth != null && request.auth.uid == resource.data.userId);

      allow update: if isAdmin() || (
        request.auth != null &&
        request.auth.uid == resource.data.userId &&
        resource.data.status == "pending" &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(["shipping", "notes", "items"])
      );
    }

    match /contactMessages/{messageId} {
      allow create: if true;
      allow read: if isAdmin();
    }

    match /wishlist/{userId}/{document=**} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
